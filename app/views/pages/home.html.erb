
<div class="jumbotron text-center">
    <h1>SciStart</h1>   
    <h3>Home of Science and Technology Entrepenuers and Startups around the World</h3>
</div>

<div class="row">
    <%if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Your Profile</h2>
                <% if current_user.profile %>
                    <%= link_to "Edit Your Profile", "#", class: "btn btn-default btn-lg btn-block" %>
                    <%= link_to "View Your Profile", user_path(current_user), class: "btn btn-default btn-lg btn-block" %>
                <%else%>
                    <p>Create your profile so you can share information and connect with the community.</p>
                    <%= link_to "Create your profile!", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' if current_user %>
                <% end %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">The Community</h2>
                <p>Visit the community and meet your fellow developers, entrepreneurs, and investors!</p>
                <%= link_to "Visit the community", "#", class: 'btn btn-default btn-lg btn-block' %>
            </div>
        </div>
    <%else%>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Basic Membership</h2>
                <h4>Sign up for free and basic access to the Community.</h4>
                <br/>
                <br/>
                <%= link_to "Sign Up Free", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Pro Membership</h2>
                <h4>Sign up for the pro account for only $10/month and get full access to the community including member contact information, special tools, and more!</h4>
                <%= link_to "Sign Up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
            </div>
        </div>
    <% end %>
</div>
